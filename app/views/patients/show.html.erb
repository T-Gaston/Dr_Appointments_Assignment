<h1><%= @patient.full_name %></h1>
<%= link_to 'Appointments', patient_appointments_path(@patient), class: "ui primary button inverted" %>
<%= link_to 'Delete Patient', @patient, method: :delete, class: "ui red button inverted" %>
<hr />
<h2>Doctors</h2>
<ul>
  <% @patient.doctors.each do |doctor| %>
    <li>
      <%= link_to doctor.name, doctor %>
    </li>
  <% end %>
</ul>
